pipeline{

    agent any

    stages{

        stage('build jar'){
            steps{
                bat 'mvn clean package -DskipTests'
            }
        }

        stage('build image'){
            steps{
                bat 'docker build -t=salim87/selenium .'
            }
        }

        stage('push image'){
        environment{
                DOCKER_HUB = credentials('dockerhub-creds')
                    }
            steps{
                bat 'echo ${DOCKER_HUB_PSW} | docker login -u ${DOCKER_HUB_USR} --password-stdin'
                bat 'docker push salim87/selenium:latest'
                bat "docker tag salim87/selenium:latest salim87/selenium:${env.BUILD_NUMBER}"
                bat "docker push salim87/selenium:${env.BUILD_NUMBER}"
            }
        }

    }

    post {
        always {
            bat 'docker logout'
        }
    }


}
